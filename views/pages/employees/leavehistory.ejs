    <!-- Icons css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <style>
        .status-approved {
            color: green;
        }

        .status-rejected {
            color: red;
        }

        .status-pending {
            color: blue;
        }

        .lead-table1 {
            overflow-y: hidden;
        }

        .table-responsive1 {
            overflow-x: auto;
        }
       
