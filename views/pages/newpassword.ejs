    <body style=" background-color: #EDEDF5;">        
        <div class="main-div1">
            <div class="sub-main1">           
                <div class="imagediv">
                    <img src="/assets/images/logo.png" alt="logo" style="height: 50px;margin-bottom: 25px;" >
            </div>
                <form  id="login-form" >
                    <h5 class="fs-18 text-dark" >Create a New Password</h5>
                    <h6 class="text-muted mb-3">Your new password must be different from previous used passwords. </h6>            
                    <div class="text-bg-info" id="reset_sucessmessage"></div>
                    <div class="text-danger" id="reset_failedmessage"></div>
                    <div class="mb-1">
                    <label for="newpassword" class="form-label text-dark">New Password</label>
                    <div class="input-group">
                    <input type="password" id="newpassword" class="form-control" placeholder="Enter your new password" maxlength="15">
                    <div class="input-group-text" data-password="false">
                    <span class="password-eye newpassword"></span> 
                    </div>                                                    
                    </div> 
                    <div class="text-danger" id="password_alert"></div> 
                    </div>
                    <div class="mb-1">
                    <label for="confirmpassword" class="form-label text-dark">Confirm Password</label>
                    <div class="input-group">
                    <input type="password" id="newcompassword" class="form-control" placeholder="Confirm your new password" maxlength="15"><div class="input-group-text" data-password="false">
                    <span class="password-eye newcompassword"></span> 
                    </div>
                    </div>
                    <div class="text-danger" id="confirmpassword_alert"></div>
                    </div>
                    <div>
                    <button style="width:100%;margin-top: 27px;" class="btn btn-primary waves-effect waves-light" type="submit" id="button">Submit</button>
                    </div>
                </form>
