<!DOCTYPE html>
<html lang="en" data-layout="topnav" data-topbar-color="light" data-menu-color="light">

<head>
    <meta charset="utf-8" />
    <title> Shiftwave - Admin Dashboard </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     
    <meta content="Techzaa" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon.ico">

    <!-- Daterangepicker css -->
    <link rel="stylesheet" href="/assets/vendor/daterangepicker/daterangepicker.css">

    <!-- Vector Map css -->
    <link rel="stylesheet" href="/assets/vendor/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.css">

    <!-- Theme Config Js -->
    <script src="/assets/js/config.js"></script>

    <!-- App css -->
    <link href="/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- Icons css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <!-- Begin page -->
    <div class="wrapper">

       
        
        <%- include('../includes/admin-header')%>
       
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

       
        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                 <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                          
                                            <a href="/admin/AddNewEmployee"><input type="button" value="New Employee" class="btn btn-primary btn-sm waves-effect waves-light"></a>
                                        </ol>
                                </div> 
                                <h4 class="page-title">Dashboard</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-xxl-6 col-sm-6">
                            <div class="card widget-flat text-bg-info1"><a href="/admin/permissions-status?value=today">
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-calendar-todo-line widget-icon"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Permissions Day Count</h6>
                                    <h2 class="my-2"><%= permission_count %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-25 me-1">-5.75%</span> -->
                                        <span class="text-nowrap">Permissions</span>
                                    </p>
                                </div></a>
                            </div>
                        </div>
                        <div class="col-xxl-6 col-sm-6">
                            <div class="card widget-flat text-bg-info1"><a href="/admin/permissions-status?value=monthly">
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-calendar-line widget-icon"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Monthly Permissions Count</h6>
                                    <h2 class="my-2"><%= permission_monthly %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-25 me-1">-5.75%</span> -->
                                        <span class="text-nowrap">Permissions</span>
                                    </p>
                                </div></a>
                            </div>
                        </div> 
                        <div class="col-xxl-6 col-sm-6">
                            <div class="card widget-flat text-bg-info1"><a href="/admin/leaves-status?value=today">
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-calendar-todo-line widget-icon"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Leaves Day Count</h6>
                                    <h2 class="my-2"><%= day_leaves_count %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-25 me-1">-5.75%</span> -->
                                        <span class="text-nowrap">Leaves</span>
                                    </p>
                                </div></a>
                            </div>
                        </div>  
                        <div class="col-xxl-6 col-sm-6">
                            <div class="card widget-flat text-bg-info1 "><a href="/admin/leaves-status?value=monthly">
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-calendar-line widget-icon"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Monthly Leaves Count</h6>
                                    <h2 class="my-2"><%= monthly_leave_count %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-25 me-1">-5.75%</span> -->
                                        <span class="text-nowrap">Leaves</span>
                                    </p>
                                </div></a>
                            </div>
                        </div>   
                        
                        <div class="col-xxl-4 col-sm-4">
                            <div class="card widget-flat text-bg-yellow1"><a href="/admin/leaves-status?value=pending" >
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-time-line widget-icon3"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Total Pending Leaves</h6>
                                     <h2 class="my-2"><%= pending_count %></h2>
                                    <span>Pending</span>
                                    
                                </div></a>
                            </div>
                        </div> <!-- end col-->
                       

                        <div class="col-xxl-4 col-sm-4">
                            <div class="card widget-flat text-bg-pink1"><a href="/admin/leaves-status?value=rejected" > 
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-close-circle-line widget-icon4"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Total Declined Leaves</h6>
                                    <h2 class="my-2"><%= rejected_count %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-10 me-1">18.25%</span> -->
                                        <span class="text-nowrap">Declined</span>
                                    </p>
                                </div></a>
                            </div>
                        </div> <!-- end col-->
                        
                        

                        <div class="col-xxl-4 col-sm-4">
                            <div class="card widget-flat text-bg-primary1"><a href="/admin/leaves-status?value=approved" > 
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-shield-check-line widget-icon"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Total Approved Leaves</h6>
                                    <h2 class="my-2"><%= approved_count %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-25 me-1">-5.75%</span> -->
                                        <span class="text-nowrap">Approved</span>
                                    </p>
                                </div></a>
                            </div>
                        </div> <!-- end col-->


                        <div class="col-xxl-4 col-sm-4">
                            <div class="card widget-flat text-bg-yellow1"> <a href="/admin/permissions-status?value=pending" > 
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-time-line widget-icon3"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Total Pending Permissions</h6>
                                    <h2 class="my-2"><%= permission_p_count %></h2> 
                                    <span>Pending</span>
                                
                                </div></a>
                            </div>
                        </div> <!-- end col-->
                       

                        <div class="col-xxl-4 col-sm-4">
                            <div class="card widget-flat text-bg-pink1"><a href="/admin/permissions-status?value=rejected" >
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-close-circle-line widget-icon4"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Total Declined Permissions</h6>
                                     <h2 class="my-2"><%= permission_d_count %></h2>
                                    <p class="mb-0">
                                       
                                        <span class="text-nowrap">Declined</span>
                                    </p>
                              
                                </div></a>
                            </div>
                        </div> <!-- end col-->
                        
                        

                        <div class="col-xxl-4 col-sm-4">
                            <div class="card widget-flat text-bg-primary1"><a href="/admin/permissions-status?value=approved" > 
                                <div class="card-body">
                                    <div class="float-end">
                                        <i class="ri-shield-check-line widget-icon"></i>
                                    </div>
                                    <h6 class="text-uppercase mt-0" title="Customers" style="color: rgb(116, 116, 116);">Total Approved Permissions</h6>
                                     <h2 class="my-2"><%= permission_a_count %></h2>
                                    <p class="mb-0">
                                        <!-- <span class="badge bg-white bg-opacity-25 me-1">-5.75%</span> -->
                                        <span class="text-nowrap">Approved</span>
                                    </p>
                                </div></a>
                            </div>
                        </div> <!-- end col-->
                                      
                        
                    </div>

                   

                    
                    

                </div>
                <!-- container -->

            </div>
            <!-- content -->

             <!-- Footer Start -->
             <%- include('../includes/employee-footer')%>
             <!-- end Footer -->

        </div>
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->

    <!-- Theme Settings -->
   
    <%- include('../includes/admin-theme-settings')%>    
    
    <!-- Vendor js -->
    <script src="/assets/js/vendor.min.js"></script>

    <!-- Daterangepicker js -->
    <script src="/assets/vendor/daterangepicker/moment.min.js"></script>
    <script src="/assets/vendor/daterangepicker/daterangepicker.js"></script>
    
    <!-- Apex Charts js -->
    <!-- <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script> -->

    <!-- Vector Map js -->
    <script src="/assets/vendor/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="/assets/vendor/admin-resources/jquery.vectormap/maps/jquery-jvectormap-world-mill-en.js"></script>

    <!-- Dashboard App js -->
    <!-- <script src="/assets/js/pages/dashboard.js"></script> -->


    <!-- App js -->
    <script src="/assets/js/app.min.js"></script>

</body>
</html> 